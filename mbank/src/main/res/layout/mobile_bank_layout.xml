<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#333333"
        android:layout_marginBottom="12dp">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/main_button_selector">

            <Button
                android:id="@+id/mobile_bank_layout_transaction_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:background="@drawable/transaction1" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/main_button_selector">

            <Button
                android:id="@+id/mobile_bank_layout_summary_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:background="@drawable/summary_new" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/main_button_selector">

            <Button
                android:id="@+id/mobile_bank_layout_settings_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="12dp"
                android:background="@drawable/settings_new" >
            </Button>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Logout"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:id="@+id/mobile_bank_layout_logout_text"
            android:layout_toLeftOf="@+id/mobile_bank_layout_logout"
            android:textColor="#4a4a4a">
        </TextView>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="13dp"
            android:background="@drawable/logout_button_selector"
            android:clickable="true"
            android:id="@+id/mobile_bank_layout_logout">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/user">
            </ImageView>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>